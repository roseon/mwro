{
	"name": "mw-tools",
	"version": "0.0.1",
	"description": "Myth War I tools",
	"author": "Wander",
	"license": "GPL-3.0-or-later",
	"repository": "gitlab:wander-gr/mw-tools",
	"type": "commonjs",
	"scripts": {
		"build": "gulp build && node build/map-tools/GenerateMapLinks",
		"build-no-client": "gulp build",
		"watch": "tsc -w",
		"eslint": "eslint src/**/*.ts",
		"eslint-fix-all": "eslint src/**/*.ts --fix",
		"lint-staged": "lint-staged",
		"config": "gulp config",
		"update": "node build/game-server/Updater/Main",
		"start-server": "node --pending-deprecation --trace-warnings --no-warnings build/game-server/Main",
		"prepare": "husky"
	},
	"dependencies": {
		"bcryptjs": "2.4.3",
		"couchbase": "^4.4.0",
		"iconv-lite": "^0.6.3",
		"kleur": "^4.1.5",
		"riff-file": "^1.0.3",
		"sharp": "^0.33.4"
	},
	"devDependencies": {
		"@tsconfig/node20": "^20.1.4",
		"@types/bcryptjs": "2.4.6",
		"@types/node": "^20.14.9",
		"@types/sharp": "^0.31.1",
		"@typescript-eslint/eslint-plugin": "^7.15.0",
		"@typescript-eslint/parser": "^7.15.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^8.10.0",
		"gulp": "^5.0.0",
		"gulp-merge-json": "^2.2.1",
		"gulp-typescript": "^6.0.0-alpha.1",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.7",
		"prettier": "3.3.2",
		"source-map-support": "^0.5.21",
		"typescript": "^5.5.3"
	},
	"lint-staged": {
		"*.ts": [
			"eslint --cache --fix",
			"prettier --write"
		],
		"*.{js,json}": "prettier --write"
	}
}
